<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onepoint_ourtree">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ourtree"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_ourtree"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnePointOurTree">

        <activity
            android:name=".activities.details.DescriptionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.MainActivity"
            android:exported="false"></activity>
    </application>

</manifest>